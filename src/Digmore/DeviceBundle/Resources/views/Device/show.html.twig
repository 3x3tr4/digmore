{% extends 'DeviceBundle::device-layout.html.twig' %}

{% block device_content -%}
    <h1>Device</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Minerid</th>
                <td>{{ entity.minerId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Intensity</th>
                <td>{{ entity.intensity }}</td>
            </tr>
            <tr>
                <th>Gap</th>
                <td>{{ entity.gap }}</td>
            </tr>
            <tr>
                <th>Wsize</th>
                <td>{{ entity.wsize }}</td>
            </tr>
            <tr>
                <th>Vectors</th>
                <td>{{ entity.vectors }}</td>
            </tr>
            <tr>
                <th>Tc</th>
                <td>{{ entity.tc }}</td>
            </tr>
            <tr>
                <th>Shaders</th>
                <td>{{ entity.shaders }}</td>
            </tr>
            <tr>
                <th>Freqdevice</th>
                <td>{{ entity.freqDevice }}</td>
            </tr>
            <tr>
                <th>Freqmemory</th>
                <td>{{ entity.freqMemory }}</td>
            </tr>
            <tr>
                <th>Powertune</th>
                <td>{{ entity.powertune }}</td>
            </tr>
            <tr>
                <th>Tempcut</th>
                <td>{{ entity.tempCut }}</td>
            </tr>
            <tr>
                <th>Tempmax</th>
                <td>{{ entity.tempMax }}</td>
            </tr>
            <tr>
                <th>Tempmin</th>
                <td>{{ entity.tempMin }}</td>
            </tr>
            <tr>
                <th>Fanmin</th>
                <td>{{ entity.fanMin }}</td>
            </tr>
            <tr>
                <th>Fanmax</th>
                <td>{{ entity.fanMax }}</td>
            </tr>
            <tr>
                <th>Threads</th>
                <td>{{ entity.threads }}</td>
            </tr>
            <tr>
                <th>New</th>
                <td>{{ entity.new }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('devices') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('device_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
